<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp"
    android:id="@+id/cardViwPoem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <View
            android:layout_width="300dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="50dp"
            android:layout_height="2dp"
            android:layout_above="@+id/txtViwPoem"
            android:background="@color/dark"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtViwPoem"
            style="@style/poem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/shekari"
            android:gravity="center"
            android:textSize="40sp"
            tools:text="منشسیمنایشسشسمیت\nبسی«»آإمنسیاشبنمتساش\nیبنمتساشیبمناشسنمیتابمنش\nستیابمنسشیابیبسشنا" />
        <View
            android:layout_width="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="200dp"
            android:layout_height="2dp"
            android:layout_below="@+id/txtViwPoem"
            android:background="@color/dark"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="200dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
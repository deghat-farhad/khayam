<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViwPoem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:paddingHorizontal="20dp">


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/divider"
            android:layout_alignLeft="@id/divider"
            android:gravity="start|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViwId"
                style="@style/poem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-6sp"
                android:fontFamily="@font/shekari"
                android:singleLine="true"
                android:textSize="30sp"
                tools:text="۱۳۶" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/header"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:background="@color/dark" />

        <LinearLayout
            android:id="@+id/distich1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViwHemistich1"
                style="@style/poem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shekari"
                android:singleLine="true"
                android:textSize="40sp"
                tools:text="گسشیبسیبل سیتبلا سیتلب سیبل" />

            <TextView
                android:id="@+id/txtViwHemistich2"
                style="@style/poem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/shekari"
                android:singleLine="true"
                android:textSize="40sp"
                tools:text="ستیا بیبسشنا" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/distich1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViwHemistich3"
                style="@style/poem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shekari"
                android:singleLine="true"
                android:textSize="40sp"
                tools:text="ستیابمنسشیابیبسشنا" />

            <TextView
                android:id="@+id/txtViwHemistich4"
                style="@style/poem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/shekari"
                android:singleLine="true"
                android:textSize="40sp"
                tools:text="ستیابمنابیبسشنا" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
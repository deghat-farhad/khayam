<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardView_horizontal_margin"
    android:layout_marginTop="@dimen/cardView_vertical_margin"
    android:layout_marginRight="@dimen/cardView_horizontal_margin"
    android:layout_marginBottom="@dimen/cardView_vertical_margin"
    app:cardCornerRadius="@dimen/cardView_radius">

    <TextView
        android:id="@+id/txtViwPoem"
        style="@style/poem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textView_poem_horizontal_padding"
        android:paddingTop="@dimen/textView_poem_padding_top"
        android:paddingRight="@dimen/textView_poem_horizontal_padding"
        android:paddingBottom="@dimen/textView_poem_padding_bottom"
        tools:text="Daniel Pearson" />

</androidx.cardview.widget.CardView>